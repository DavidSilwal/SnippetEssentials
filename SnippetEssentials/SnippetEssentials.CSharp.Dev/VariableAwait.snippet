<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Variable Await</Title>
            <Shortcut>vy</Shortcut>
            <Description>Variable declaration with await.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
            <Keywords>
                <Keyword>Meta-CoreSnippet</Keyword>
            </Keywords>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>name</ID>
                    <ToolTip>Variable name</ToolTip>
                    <Default>x</Default>
                </Literal>
                <Literal>
                    <ID>value</ID>
                    <ToolTip>Variable value</ToolTip>
                    <Default>expression</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[var $name$ = await $value$;$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>