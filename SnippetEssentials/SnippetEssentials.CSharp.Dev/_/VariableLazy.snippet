<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Variable Lazy</Title>
            <Shortcut>vly</Shortcut>
            <Description>Variable declaration with lazy initialization.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>type</ID>
                    <ToolTip>Type name</ToolTip>
                    <Default>object</Default>
                </Literal>
                <Literal>
                    <ID>value</ID>
                    <ToolTip>Variable value</ToolTip>
                    <Default>expression</Default>
                </Literal>
                <Literal>
                    <ID>varname</ID>
                    <ToolTip>Variable name</ToolTip>
                    <Default>x</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[$type$ $varname$ = null;

if ($varname$ == null)
    $varname$ = $value$;$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>