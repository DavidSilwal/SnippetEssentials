<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Variable Array with Initializer</Title>
            <Shortcut>vair</Shortcut>
            <Description>Array variable declaration (with initializer).</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
            <Keywords>
                <Keyword>CoreSnippet</Keyword>
            </Keywords>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>_generictype</ID>
                    <ToolTip>Generic type</ToolTip>
                    <Default>object</Default>
                </Literal>
                <Literal>
                    <ID>_vararray</ID>
                    <ToolTip>Array variable name</ToolTip>
                    <Default>items</Default>
                </Literal>
                <Literal>
                    <ID>init</ID>
                    <ToolTip>Array elements initialization</ToolTip>
                    <Default>init</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[var $_vararray$ = new $_generictype$[] { $init$ };$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>