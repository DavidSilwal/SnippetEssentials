<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>String Join Carriage Return and Linefeed</Title>
            <Shortcut>sjncrlf</Shortcut>
            <Description>string.Join method with carriage return and linefeed as a separator.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Imports>
                <Import>
                    <Namespace>System</Namespace>
                </Import>
            </Imports>
            <Declarations>
                <Literal Editable="false">
                    <ID>_string</ID>
                    <Default>string</Default>
                </Literal>
                <Literal>
                    <ID>values</ID>
                    <ToolTip>Values to join</ToolTip>
                    <Default>values</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[$_string$.Join("\r\n", $values$)$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>