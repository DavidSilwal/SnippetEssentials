<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Public Static Read-only Field</Title>
            <Shortcut>srf</Shortcut>
            <Description>Public static read-only field.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>_fieldType</ID>
                    <ToolTip>Field type</ToolTip>
                    <Default>string</Default>
                </Literal>
                <Literal>
                    <ID>name</ID>
                    <ToolTip>Field name</ToolTip>
                    <Default>FieldName</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[public static readonly $_fieldType$ $name$;$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>