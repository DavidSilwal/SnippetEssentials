<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Internal Event with EventHandler&lt;T&gt;</Title>
            <Shortcut>iet</Shortcut>
            <Description>Internal event with EventHandler&lt;T&gt;.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
            <Keywords>
                <Keyword>Meta-NonUniqueShortcut</Keyword>
            </Keywords>
        </Header>
        <Snippet>
            <Imports>
                <Import>
                    <Namespace>System</Namespace>
                </Import>
            </Imports>
            <Declarations>
                <Literal>
                    <ID>event</ID>
                    <ToolTip>Event name</ToolTip>
                    <Default>EventName</Default>
                </Literal>
                <Literal>
                    <ID>eventargs</ID>
                    <ToolTip>EventArgs name</ToolTip>
                    <Default>EventArgs</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[internal event EventHandler<$eventargs$> $event$;

protected virtual void On$event$($eventargs$ e)
{
    EventHandler<$eventargs$> handler = $event$;
    if (handler != null)
        handler(this, e);
}$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>