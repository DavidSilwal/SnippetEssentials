<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Public Static Read-only Property with Backing Field</Title>
            <Shortcut>srp_</Shortcut>
            <Description>Public static read-only property with a backing field.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal Editable="false">
                    <ID>_fieldprefix</ID>
                    <Default>_</Default>
                </Literal>
                <Literal>
                    <ID>_propertytype</ID>
                    <ToolTip>Property type</ToolTip>
                    <Default>string</Default>
                </Literal>
                <Literal>
                    <ID>property</ID>
                    <ToolTip>Property name</ToolTip>
                    <Default>PropertyName</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[private static $_propertytype$ $_fieldprefix$$property$;

public static $_propertytype$ $property$
{
    get { return $_fieldprefix$$property$; }
}$end$]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>