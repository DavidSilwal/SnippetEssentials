<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>If String Equal to Null or White-space</Title>
            <Shortcut>ifsnw</Shortcut>
            <Description>If statement with condition whether a string variable is equal to null, empty or white-space.</Description>
            <Author>Josef Pihrt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Imports>
                <Import>
                    <Namespace>System</Namespace>
                </Import>
            </Imports>
            <Declarations>
                <Literal Editable="false">
                    <ID>_string</ID>
                    <Default>string</Default>
                </Literal>
                <Literal>
                    <ID>_varstring</ID>
                    <ToolTip>String identifer name</ToolTip>
                    <Default>s</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp"><![CDATA[if ($_string$.IsNullOrWhiteSpace($_varstring$))
{
    $end$
}]]></Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>